{
  "ReverseProxy": {
    "Routes": {
      "orders_route": {
        "ClusterId": "orders_cluster",
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/orders" }
        ]
      },
      "payments_route": {
        "ClusterId": "payments_cluster",
        "Match": {
          "Path": "/payments/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/payments" }
        ]
      }
    },
    "Clusters": {
      "orders_cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://orders-service:8080/"
          }
        }
      },
      "payments_cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://payments-service:8080/"
          }
        }
      }
    }
  }
}
